{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [ "dom", "esnext" ],
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": "src/",
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist",
    ]
}